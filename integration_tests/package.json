{
  "name": "drop-cosmos-integration-tests",
  "version": "1.0.34",
  "main": "vitest",
  "license": "MIT",
  "scripts": {
    "test": "vitest --run",
    "test:unbonding-mirror": "vitest --run unbonding-mirror.test.ts --bail 1",
    "test:poc-provider-proposals": "vitest --run poc-provider-proposals.test.ts --bail 1",
    "test:poc-proposal-votes": "vitest --run poc-proposal-votes.test.ts --bail 1",
    "test:core": "REMOTE_CHAIN_OPTS=./dockerfiles/gaia/options.json vitest --run core.test.ts --bail 1",
    "test:core:slashing": "vitest --run core-slashing.test.ts --bail 1",
    "test:core:native": "REMOTE_CHAIN_OPTS=./dockerfiles/neutronv2/options.json vitest --run core-native.test.ts --bail 1",
    "test:core:native:long": "REMOTE_CHAIN_OPTS=./dockerfiles/neutronv2/options.json vitest --run core-native-long-idle.test.ts --bail 1",
    "test:pump": "vitest --run pump.test.ts --bail 1",
    "test:bond-mirror": "vitest --run bond-mirror.test.ts --bail 1",
    "test:pump-multi": "vitest --run pump-multi.test.ts --bail 1",
    "test:validators-stats": "vitest --run validators-stats.test.ts --bail 1",
    "test:validator-set": "vitest --run validator-set.test.ts --bail 1",
    "test:distribution": "vitest --run distribution.test.ts --bail 1",
    "test:initia": "REMOTE_CHAIN_OPTS=./dockerfiles/initia/options.json vitest --run initia.test.ts --bail 1",
    "test:auto-withdrawer": "vitest --run auto-withdrawer.test.ts --bail 1",
    "test:gv": "vitest --run gv.test.ts --bail 1",
    "test:splitter": "vitest --run splitter.test.ts --bail 1",
    "test:puppeteer:tokenize-shares": "vitest --run puppeteer-tokenize-shares.test.ts --bail 1",
    "test:puppeteer:redelegate": "vitest --run puppeteer-redelegate.test.ts --bail 1",
    "debug": "vitest --inspect-brk --bail 1 --threads false --run core.test.ts",
    "watch": "vitest",
    "build-ts-client": "ts-node ./src/rebuild-client.ts",
    "build-lsm-image": "./dockerfiles/lsm/build.sh",
    "build-gaia-image": "./dockerfiles/gaia/build.sh",
    "build-hermes-image": "./dockerfiles/hermes/build.sh",
    "build-neutron-image": "./dockerfiles/neutron/build.sh",
    "build-neutron-v2-image": "./dockerfiles/neutronv2/build.sh",
    "build-initia-image": "./dockerfiles/initia/build.sh",
    "build-neutron-query-relayer-image": "./dockerfiles/neutron-query-relayer/build.sh",
    "build-images": "./dockerfiles/build-all.sh && docker images",
    "lint": "eslint ./src -f compact",
    "lint:fix": "eslint ./src -f compact --fix",
    "rebuild-workflow": "ts-node ./src/rebuild-workflow.ts"
  },
  "dependencies": {
    "@cosmjs/amino": "^0.32.4",
    "@cosmjs/cosmwasm-stargate": "^0.32.4",
    "@cosmjs/proto-signing": "^0.32.4",
    "@cosmjs/stargate": "^0.32.4",
    "@cosmjs/encoding": "^0.32.4",
    "@cosmjs/tendermint-rpc": "^0.32.4",
    "@initia/initia.js": "^0.2.16",
    "@neutron-org/client-ts": "^1.4.0",
    "@neutron-org/cosmopark": "1.7.14",
    "bech32": "^1.1.4",
    "bech32-buffer": "0.2.1",
    "decimal.js": "^10.4.3",
    "dotparser": "^1.1.1",
    "drop-ts-client": "file:../ts-client",
    "sha3": "^2.1.4",
    "yaml": "^2.4.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "@vitest/ui": "^0.34.1",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.0.1",
    "ts-node": "^10.9.1",
    "typescript": "5.3.3",
    "vitest": "^0.34.1"
  },
  "description": "Drop on Cosmos integration test",
  "repository": "git@github.com:hadronlabs-org/lionco-contracts.git"
}
